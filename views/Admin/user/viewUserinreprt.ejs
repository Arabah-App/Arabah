<%- include('../common/header') %>
<%- include('../common/sidebar') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


<!-- BEGIN: Content-->
<div class="app-content content ">

  <div class="content-wrapper container-xxl p-0">
    <div class="content-body">
      <section id="multiple-column-form">
        <div class="row">
          <div class=" col-12 mx-auto">
            <div class="card">
              <div class="card-header border-bottom">
                <h4 class="card-title">View user</h4>


              </div>

              <div class="card-body">
                <form class="form form-vertical" id="" action="/" method="POST" enctype="multipart/form-data">

                  <div class="row">
                    <div class="col-12">
                      <div class="mb-1 row">
                        <div class="col-sm-12 goalImg text-center">
                          <!-- <label class="col-form-label new_lable" for="name">User Image</label> -->
                          <img src="<%=userdetails?.image%>" class="user_bigimg">
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <h4>User</h4>
                      <div class="mb-1 row">
                        <div class="col-sm-12">
                          <label class="col-form-label new_lable" for="name">Name</label>
                        </div>
                        <div class="col-sm-12">
                          <input type="text" id="name" class="form-control" name="name" value="<%=userdetails.name%> " disabled>
                        </div>
                      </div>
                      <div class="mb-1 row">
                        <div class="col-sm-12">
                          <label class="col-form-label new_lable" for="email">Email</label>
                        </div>
                        <div class="col-sm-12">
                          <input type="text" id="email" class="form-control" name="email" value="<%=userdetails.email%> " disabled>
                        </div>
                      </div>
                      <div class="mb-1 row">
                        <div class="col-sm-12">
                          <label class="col-form-label new_lable" for="phone">Phone No.</label>
                        </div>
                        <div class="col-sm-12">
                          <input type="text" id="phone" class="form-control" name="phone" value="<%=userdetails?.phone%> " disabled>
                        </div>
                      </div>


                      <div class="d-flex justify-content-center gap-2">
                        <a href="/userviewcomment/<%=userdetails._id%>" class="btn bg-light-primary">Comments</a>
                        <a href="/userviewRating/<%=userdetails._id%>" class="btn bg-light-primary">Rating & Review</a>
                        <a href="/userviewReport/<%=userdetails._id%>" class="btn bg-light-primary">Report Product</a>
                      </div>
                    </div>



                  </div>



                  <div class="row  text-end">
                    <div class="col-12 text-end">
                      <a href="/RaiseList" class="btn btn-primary" title="Edit Profile">Back</a>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
<div class="sidenav-overlay"></div>
<div class="drag-target"></div>
<%- include('../common/footer') %>