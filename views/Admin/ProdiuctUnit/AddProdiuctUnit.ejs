<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>


<script>
  $(document).ready(function () {
    // Custom method to prevent space at the beginning
    jQuery.validator.addMethod(
      "noSpace",
      function (value, element) {
        return value == "" || !/^\s/.test(value);
      },
      "No space allowed at the beginning"
    );

    $("#profile").validate({
      rules: {
        ProdiuctUnit: {
          required: true,
          noSpace: true,
          maxlength: 60,
        },
        ProdiuctUnitArabic: {
          required: true,
          noSpace: true,
          maxlength: 60,
        },
      },

      messages: {
        ProdiuctUnit: {
          required: "Product Unit is required",
          noSpace: "No space allowed at the beginning",
          maxlength: "Product Unit should not exceed 60 characters",
        },
        ProdiuctUnitArabic: {
          required: "Product Unit (In Arabic) is required",
          noSpace: "No space allowed at the beginning",
          maxlength: "Product Unit (In Arabic) should not exceed 60 characters",
        },
      },

      errorElement: "div",
      errorClass: "jqval-error",
      errorPlacement: function (error, element) {
        error.insertAfter(element);
        error.slideDown(400);
        error.animate(
          {
            opacity: 1,
          },
          {
            queue: false,
            duration: 700,
          }
        );
        error.css("color", "red");
      },

      submitHandler: function (form) {
        var error = $(".assign_error_div").text();
        if (!error) {
          form.submit();
        }
      },
    });
  });
</script>

