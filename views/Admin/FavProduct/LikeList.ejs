<%- include('../common/header') %>
<%- include('../common/sidebar') %>

<div class="app-content content ">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper container-xxl p-0">
    <div class="content-body">
      <section id="responsive-datatable">
        <div class="row">
          <div class="card">
            <div class="card-header border-bottom">
              <h4 class="card-title">Product Like listing</h4>

            </div>
            <br>
            <div class="card-DataTable table-responsive">
              <table class="table table-hover-animation" style="color: rgb(65, 64, 64);">
                <thead>
                  <tr>
                    <th>S NO.</th>
                    <!-- <th>User Name</th> -->

                    <th>Product Name</th>
                    <th>Product Image</th>
                    <th>Product Like/unLike</th>

                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (RaiseList && RaiseList.length > 0) { %>
                  <% RaiseList.forEach(function(data, i) { %>
                  <tr>
                    <td> <%= i + 1 %> </td>

                    <!-- <td>

                      <%= data?.userId?.name %>

                    </td> -->
                    <td>

                      <%= data?.ProductID?.name %>

                    </td>
                
                    <td>
                      <img
                        src="<%=data?.ProductID?.image%>"
                        width="45px"
                        height="40px"
                        type="submit"
                        style="cursor: pointer; border-radius: 10px"
                      />
                    </td>

                    <td> <%= (data?.status == 1) ? "Like" : "Unlike" %> </td>






                    <td>
                      <a href="/viewLike/<%= data._id %>" class="btn btn-sm bg-light-primary">
                        <i data-feather='eye'></i>
                      </a>

                    </td>
                  </tr>
                  <% }) %>
                  <% } else { %>
                  <tr>
                    <td colspan="5" class="text-center">No comments available</td>
                  </tr>
                  <% } %>

                </tbody>

              </table>
            </div>

          </div>
        </div>
      </section>
    </div>
  </div>
</div>
<div class="sidenav-overlay"></div>
<div class="drag-target"></div>

<%- include('../common/footer') %>

